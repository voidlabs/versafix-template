{
  "name": "versafix-template",
  "version": "1.3.1",
  "description": "Versafix-1 Master Templates for Mosaico",
  "main": "./src/index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/voidlabs/versafix-template.git"
  },
  "devDependencies": {
    "async": "^3.2.4",
    "cheerio": "1.0.0-rc.12",
    "entities": "^4.4.0",
    "fs-extra": "^10.1.0",
    "htmml": "1.0.4",
    "mockery": "^2.1.0",
    "mosaico": "^0.18.6",
    "phantomjs-prebuilt": "^2.1.16",
    "release-it": "^15.4.2",
    "replace-in-file": "^6.3.5",
    "rimraf": "^3.0.2",
    "tmp": "^0.2.1"
  },
  "author": "Stefano Bagnara",
  "license": "MIT",
  "scripts": {
    "build": "node src/index.js",
    "translate": "node src/translate.js",
    "clean": "node ./node_modules/rimraf/bin.js -- dist/template/* dist/template.it/*",
    "test": "node src/test.js",
    "release": "release-it"
  },
  "engine": "node >= 6.0.0",
  "release-it": {
    "git": {
      "addUntrackedFiles": true
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    },
    "hooks": {
      "before:init": [
        "npm run translate test",
        "npm run build test"
      ],
      "after:bump": [
        "npm run clean",
        "npm run translate",
        "npm run build"
      ],
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    }
  }
}
